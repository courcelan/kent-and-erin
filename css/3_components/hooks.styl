.card-img
    display: block
    max-width: 120px
    margin-right: blh(.5) !important

    +under(breakpoints.condensed)
        margin-left: 0 !important


.card-hed
    text-decoration: underline

.card-hdr
    font-weight: 900

    * + *
        margin-top: 0

    +under(breakpoints.condensed)
        flex-flow: row

.hook
    max-width: calc-max-grid(3, 9)
